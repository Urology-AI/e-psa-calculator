rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ============================================
    // HELPER FUNCTIONS
    // ============================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isActive == true;
    }
    
    // Optimized with regex to handle both domains and case-insensitivity
    function isSuperAdmin() {
      return isAuthenticated() && (
        request.auth.token.email.matches('(?i)^.*@(mountsinai\\.org|mssm\\.edu)$') ||
        request.auth.token.email in ['aditya.dixit@mssm.edu', 'adixit@nyu.edu']
      );
    }
    
    function isAuthorizedAdmin() {
      return isAdmin() || isSuperAdmin();
    }
    
    // FIXED: Added null check to prevent rule evaluation errors
    function isValidString(value, maxLength) {
      return value != null && value is string && value.size() <= maxLength;
    }
    
    // ============================================
    // ANALYTICS COLLECTIONS
    // ============================================
    match /analytics/{document}/{subDocument} {
      allow read, list: if isAuthenticated() && isAuthorizedAdmin();
      allow write: if isAuthenticated() && (isAdmin() || isSuperAdmin());
    }
    
    // Specific analytics subcollections
    match /analytics/calculator_usage/events/{eventId} {
      allow read, list: if isAuthenticated() && isAuthorizedAdmin();
      allow write: if isAuthenticated() && (isAdmin() || isSuperAdmin());
    }
    
    match /analytics/outcomes/records/{recordId} {
      allow read, list: if isAuthenticated() && isAuthorizedAdmin();
      allow write: if isAuthenticated() && (isAdmin() || isSuperAdmin());
    }
    
    // ============================================
    // LEGACY ADMINS COLLECTION
    // ============================================
    match /admins/{userId} {
      allow read, write, create, update, delete: if isAuthenticated() && isSuperAdmin();
      allow get: if isAuthenticated() && (request.auth.uid == userId || isAuthorizedAdmin());
      allow list: if isAuthenticated() && isAuthorizedAdmin();
    }
    
    // ============================================
    // CONNECTION TESTS
    // ============================================
    match /_connection_test/{document} {
      allow read, write: if isAuthenticated() && isAuthorizedAdmin();
    }
    
    // ============================================
    // SECTION LOCKS COLLECTION
    // ============================================
    match /users/{userId}/sectionLocks/{lockId} {
      allow read, write, create, update: if isAuthenticated() && (request.auth.uid == userId || isAdmin() || isSuperAdmin());
    }
    
    // ============================================
    // USERS COLLECTION (PHI - Backend Only)
    // ============================================
    match /users/{userId} {
      allow get: if isAuthenticated() && 
        (request.auth.uid == userId || isAdmin() || isSuperAdmin());
      allow list: if isAuthenticated() && (isAdmin() || isSuperAdmin());
      allow create, update: if false; 
    }
    
    // ============================================
    // SESSIONS COLLECTION (PHI - Backend Only)
    // ============================================
    match /sessions/{sessionId} {
      allow get, list: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || isAdmin() || isSuperAdmin());
      allow create, update, delete: if false;
    }
    
    // ============================================
    // SECURE PHONE DATA COLLECTION
    // ============================================
    match /securePhoneData/{userId} {
      allow read, write: if isAuthenticated() && (isAdmin() || isSuperAdmin());
      allow delete: if false;
    }
    
    // ============================================
    // AUDIT LOGS
    // ============================================
    match /auditLogs/{logId} {
      allow read: if isAuthenticated() && (isAdmin() || isSuperAdmin());
      allow create, update, delete: if false;
    }

    // ============================================
    // CALCULATOR CONFIG (Public Read, Admin Write)
    // ============================================
    match /calculatorConfig/{docId} {
      allow get: if docId == 'published';
      allow create, update, delete: if isAuthenticated() && isAuthorizedAdmin();
    }

    match /calculatorConfigVersions/{versionId} {
      allow read: if isAuthenticated() && isAuthorizedAdmin();
      allow create: if isAuthenticated() && isAuthorizedAdmin();
      allow update, delete: if false;
    }
    
    // ============================================
    // DEFAULT: DENY ALL
    // ============================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

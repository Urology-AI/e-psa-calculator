rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ============================================
    // HELPER FUNCTIONS
    // ============================================
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Check if user is admin (via admins collection)
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isActive == true;
    }
    
    // Check if user is super admin (NYU email domain)
    function isSuperAdmin() {
      return isAuthenticated() && 
        request.auth.token.email.matches('.*@nyulangone.org$');
    }
    
    // Validate string field
    function isValidString(value, maxLength) {
      return value is string && value.size() <= maxLength;
    }
    
    // ============================================
    // ADMINS COLLECTION (Admin User Management)
    // ============================================
    match /admins/{userId} {
      // Only super admins can manage admin collection
      allow read, write, create, update, delete: if isAuthenticated() && isSuperAdmin();
      
      // Users can read their own admin status
      allow get: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // ============================================
    // USERS COLLECTION (PHI - Backend Only)
    // ============================================
    match /users/{userId} {
      // Users can read their own data; admins can read all
      allow get: if isAuthenticated() && 
        (request.auth.uid == userId || isAdmin());
      
      // BLOCK all client writes - must use Cloud Functions
      allow create, update: if false;
      
      // List users - admin only
      allow list: if isAuthenticated() && isAdmin();
    }
    
    // ============================================
    // SESSIONS COLLECTION (PHI - Backend Only)
    // ============================================
    match /sessions/{sessionId} {
      // Users can read their own sessions; admins can read all
      allow get: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || isAdmin());
      
      // BLOCK all client writes - must use Cloud Functions
      allow create, update, delete: if false;
      
      // List own sessions or admin
      allow list: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // ============================================
    // SECURE PHONE DATA COLLECTION (Admin Only)
    // ============================================
    match /securePhoneData/{userId} {
      // Only admins can access encrypted phone data
      allow read, write, create, update: if isAuthenticated() && isAdmin();
      allow delete: if false; // Keep for audit trail
    }
    
    // ============================================
    // AUDIT LOGS (Backend Only, Admin Read)
    // ============================================
    match /auditLogs/{logId} {
      allow create: if false; // Only backend via Admin SDK
      allow read: if isAuthenticated() && isAdmin();
      allow update, delete: if false;
    }
    
    // ============================================
    // DEFAULT: DENY ALL
    // ============================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
